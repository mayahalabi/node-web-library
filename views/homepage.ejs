<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Library Homepage</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <style>
    :root {
      --light-beige: #f6f4f2;
      --mid-green: #c6ad8f;
      --dark-blue: #425664;
      --hover-green: #a89c83;
    }

    body {
      font-family: "Arial", sans-serif;
      color: var(--dark-blue);
      background-color: var(--light-beige);
      line-height: 1.6;
    }

    .navbar {
      background-color: var(--dark-blue);
    }

    .hero-section {
      background: linear-gradient(135deg,
          var(--mid-green),
          var(--light-beige));
      padding: 50px 0;
      color: var(--light-beige);
      text-shadow: 1px 1px 4px rgba(0, 0, 0, 0.5);
    }

    .card {
      background-color: var(--light-beige);
      border: 1px solid var(--mid-green);
      border-radius: 10px;
    }

    .btn-primary {
      background-color: var(--dark-blue);
      color: var(--light-beige);
      border: none;
      transition: background-color 0.3s ease, transform 0.2s ease;
    }

    .btn-primary:hover {
      background-color: var(--hover-green);
      transform: translateY(-2px);
    }

    .btn-outline-primary {
      color: var(--dark-blue);
      border-color: var(--dark-blue);
      transition: color 0.3s ease, border-color 0.3s ease, transform 0.2s ease;
    }

    .btn-outline-primary:hover {
      background-color: var(--hover-green);
      border-color: var(--hover-green);
      color: var(--light-beige);
      transform: translateY(-2px);
    }

    .btn:focus,
    .btn:active {
      outline: none;
      box-shadow: none;
    }

    footer {
      background-color: var(--dark-blue);
      color: var(--light-beige);
      padding: 20px 0;
    }

    footer p {
      margin: 0;
    }

    .form-label {
      color: var(--dark-blue);
      text-shadow: none;
      text-align: left;
    }
  </style>
</head>

<body>
  <header>
    <nav class="navbar navbar-expand-lg navbar-dark">
      <div class="container">
        <a class="navbar-brand" style="font-weight: bolder; font-size: xx-large">BookWave</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
          <span class="navbar-toggler-icon"></span>
        </button>
      </div>
    </nav>
  </header>

  <section class="hero-section text-center">
    <div class="container py-5">
      <div class="row align-items-center">
        <!-- About Us Message -->
        <div class="col-md-6 text-md-start text-center">
          <h1 style="color: #425664; text-shadow: none"><b>About Us</b></h1>
          <p style="color: #425664; text-shadow: none" class="lead">
            Our library is a place of knowledge and community. We provide a
            wide range of books and resources to inspire learning and
            discovery. Whether you're studying, exploring new interests, or
            simply enjoying a good read, our friendly staff is here to help
            you every step of the way.
          </p>
        </div>
        <!-- Sign In/Sign Up Forms -->
        <div class="col-md-6">
          <div class="card p-4 mx-auto" style="max-width: 400px">
            <div class="d-flex justify-content-center mb-4">
              <button id="signin-btn" class="btn btn-primary me-2">
                Sign In
              </button>
              <button id="signup-btn" class="btn btn-outline-primary">
                Sign Up
              </button>
            </div>

            <div id="forms-container">
              <!-- Sign In Form -->
              <div id="signin-form">
                <h3 class="text-center" style="text-shadow: none">Sign In</h3>
                <form action="/api/users/signin" method="POST">
                  <div class="mb-3 text-start">
                    <label for="signinUsername" class="form-label">Username</label>
                    <input type="text" id="username" name="username" class="form-control"
                      placeholder="Enter your username" required />
                  </div>
                  <div class="mb-3 text-start">
                    <label for="signinPassword" class="form-label">Password</label>
                    <input type="password" id="password" name="password" class="form-control"
                      placeholder="Enter your password" required />
                  </div>
                  <button type="submit" class="btn btn-primary">
                    Sign In
                  </button>
                </form>
              </div>

              <!-- Sign Up Form -->
              <div id="signup-form" class="d-none">
                <h3 class="text-center" style="text-shadow: none">Sign Up</h3>
                <form action="/api/users/signup" method="POST">
                  <div class="mb-3 text-start">
                    <label for="signupUsername" class="form-label">Username</label>
                    <input type="text" name="username" id="signupUsername" class="form-control"
                      placeholder="Enter username" required />
                  </div>
                  <div class="mb-3 text-start">
                    <label for="signupFirstname" class="form-label">First Name</label>
                    <input type="text" name="first_name" id="signupFirstname" class="form-control"
                      placeholder="Enter first name" required />
                  </div>
                  <div class="mb-3 text-start">
                    <label for="signuplastname" class="form-label">Last Name</label>
                    <input type="text" name="last_name" id="signupLastname" class="form-control"
                      placeholder="Enter last name" required />
                  </div>
                  <div class="mb-3 text-start">
                    <label for="signupEmail" class="form-label">Email</label>
                    <input type="email" name="email" id="signupEmail" class="form-control"
                      placeholder="Enter your email" required />
                  </div>
                  <div class="mb-3 text-start">
                    <label for="signupPhone" class="form-label">Phone Number (optional)</label>
                    <input type="tel" name="phone_number" id="signupPhone" class="form-control"
                      placeholder="Enter your phone number" />
                  </div>
                  <div class="mb-3 text-start">
                    <label for="signupAddress" class="form-label">Address (optional)</label>
                    <input type="text" name="address" id="signupAddress" class="form-control"
                      placeholder="Enter your phone number" />
                  </div>
                  <div class="mb-3 text-start">
                    <label for="signupPassword" class="form-label">Password</label>
                    <input type="password" name="password" id="signupPassword" class="form-control"
                      placeholder="Enter your password" required />
                  </div>
                  <div class="mb-3 text-start">
                    <input type="hidden" name="role" value="user" />
                  </div>
                  <div class="d-grid">
                    <button type="submit" class="btn btn-primary">
                      Sign Up
                    </button>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <section class="py-5 bg-light text-center">
    <div class="container">
      <h2>Why Choose Us?</h2>
      <div class="row g-4 mt-4">
        <div class="col-md-4">
          <div class="card p-3">
            <h4>Extensive Book Collection</h4>
            <p>Discover books across all genres and fields.</p>
          </div>
        </div>
        <div class="col-md-4">
          <div class="card p-3">
            <h4>Quiet Study Environment</h4>
            <p>Enjoy a peaceful space to focus on your work.</p>
          </div>
        </div>
        <div class="col-md-4">
          <div class="card p-3">
            <h4>Friendly Staff</h4>
            <p>Our team is here to help you find what you need.</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <footer class="text-center">
    <div class="container">
      <p>&copy; 2024 Library Name | All Rights Reserved</p>
    </div>
  </footer>

  <script>
    const signinBtn = document.getElementById("signin-btn");
    const signupBtn = document.getElementById("signup-btn");
    const signinForm = document.getElementById("signin-form");
    const signupForm = document.getElementById("signup-form");

    signinBtn.addEventListener("click", () => {
      signinForm.classList.remove("d-none");
      signupForm.classList.add("d-none");
      signinBtn.classList.add("btn-primary");
      signinBtn.classList.remove("btn-outline-primary");
      signupBtn.classList.add("btn-outline-primary");
      signupBtn.classList.remove("btn-primary");
    });

    signupBtn.addEventListener("click", () => {
      signupForm.classList.remove("d-none");
      signinForm.classList.add("d-none");
      signupBtn.classList.add("btn-primary");
      signupBtn.classList.remove("btn-outline-primary");
      signinBtn.classList.add("btn-outline-primary");
      signinBtn.classList.remove("btn-primary");
    });
  </script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>