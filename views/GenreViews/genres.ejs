<!DOCTYPE html>
<html>

<head>
  <link href="/css/style.css" rel="stylesheet" type="text/css" />
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css"
    integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet" />
  <title>Genre Management</title>
  <style>
    /* Custom styles for buttons */
    .btn-update {
      background-color: #425664;
      color: white;
      border: none;
    }

    .btn-update:hover {
      background-color: #2f3d48;
      color: #ffffff;
    }

    .btn-delete {
      background-color: #c6ad8f;
      color: white;
      border: none;
    }

    .btn-delete:hover {
      background-color: #b09579;
      color: #ffffff;
    }

    .btn-add {
      background-color: #6c757d;
      /* Neutral gray color for the Add button */
      color: white;
      border: none;
      font-size: 1rem;
      padding: 10px 15px;
      /* Added padding for a better button size */
      margin-bottom: 20px;
      /* Space below the button */
    }

    .btn-add:hover {
      background-color: #5a6268;
      /* Slightly darker gray for hover effect */
      color: white;
    }

    .btn {
      font-size: 0.875rem;
      /* Small button font size */
    }

    /* Header Styling */
    h2 {
      color: #425664;
      /* You can change this to your preferred color */
      margin-bottom: 20px;
      /* Space between the header and the table */
    }

    /* Table Styling */
    .table th,
    .table td {
      vertical-align: middle;
      /* Align text vertically in the middle */
    }

    .table td {
      padding: 0.75rem;
      /* Adjust padding to make the table more compact */
    }

    .container {
      margin-top: 20px;
    }

    /* Ensure the Add Genre button stays at the bottom-right of the table */
    .add-genre-container {
      text-align: right;
      margin-bottom: 15px;
    }
  </style>
</head>

<body>
  <%- include('../adminPartial/navbarAdmin', {role: 'admin' }) %>
    <div class="container">
      <%var success=typeof success !=='undefined' ? success : []; %>
        <%var error=typeof error !=='undefined' ? error : []; %>
          <div class="add-genre-container">
            <a href="/api/genres/add-form" class="btn btn-add">Add Genre</a>
          </div>
          <h2><b>Genre Management</b></h2>
          <table class="table table-striped">
            <thead>
              <tr>
                <th>Genre ID</th>
                <th>type</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <%for (let i=0; i < genres.length; i++) { %>
                <tr>
                  <td>
                    <%= genres[i].genre_id %>
                  </td>
                  <td>
                    <%= genres[i].type %>
                  </td>
                  <td>
                    <a href="/api/genres/edit-form/<%= genres[i].genre_id %>" class="btn btn-sm btn-update mx-1"
                      title="Edit Genre">Edit</a>
                    <a href="/api/genres/delete/<%= genres[i].genre_id %>" title="Delete User"
                      class="btn btn-sm btn-delete mx-1">Delete</a>
                  </td>
                </tr>
                <%} %>
            </tbody>
          </table>
    </div>
</body>

</html>