<!DOCTYPE html>
<html>

<head>
  <link href="/css/style.css" rel="stylesheet" type="text/css" />
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css"
    integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet" />
  <title>Users</title>
  <style>
    /* Custom styles for buttons */
    .btn-update {
      background-color: #425664;
      color: white;
      border: none;
    }

    .btn-update:hover {
      background-color: #2f3d48;
      color: #ffffff;
    }

    .btn-delete {
      background-color: #c6ad8f;
      color: white;
      border: none;
    }

    .btn-delete:hover {
      background-color: #b09579;
      color: #ffffff;
    }

    .btn-add {
      background-color: #6c757d;
      /* Neutral gray color for the Add button */
      color: white;
      border: none;
      font-size: 1rem;
      padding: 10px 15px;
      /* Added padding for a better button size */
      margin-bottom: 20px;
      /* Space below the button */
    }

    .btn-add:hover {
      background-color: #5a6268;
      /* Slightly darker gray for hover effect */
      color: white;
    }

    .btn {
      font-size: 0.875rem;
      /* Small button font size */
    }

    /* Header Styling */
    h2 {
      color: #425664;
      /* You can change this to your preferred color */
      margin-bottom: 20px;
      /* Space between the header and the table */
    }

    /* Table Styling */
    .table th,
    .table td {
      vertical-align: middle;
      /* Align text vertically in the middle */
    }

    .table td {
      padding: 0.75rem;
      /* Adjust padding to make the table more compact */
    }

    .container {
      margin-top: 20px;
    }

    /* Ensure the Add User button stays at the bottom-right of the table */
    .add-user-container {
      text-align: right;
      margin-bottom: 15px;
    }

    /* Make table responsive */
    .table-responsive {
      display: block;
      width: 100%;
      overflow-x: auto;
      white-space: nowrap;
    }
  </style>
</head>

<body>
  <%- include('../adminPartial/navbarAdmin', {role: 'admin' }) %>

    <div class="container">
      <!-- Add User Button Positioned at Bottom Right -->
      <div class="add-user-container">
        <a href="/api/users/add-form" class="btn btn-add">
          <i class="bi bi-plus-circle"></i> Add User/Admin
        </a>
      </div>

      <!-- Header for User Management, aligned to the left -->
      <h2><b>User Management</b></h2>

      <!-- Responsive Table Wrapper -->
      <div class="table-responsive">
        <!-- Table displaying users -->
        <table class="table table-striped">
          <thead>
            <tr>
              <th>Username</th>
              <th>First Name</th>
              <th>Last Name</th>
              <th>Email</th>
              <th>Phone Number</th>
              <th>Role</th>
              <th>Password</th>
              <th>Register Date</th>
              <th>Last Updated</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% for (let i=0; i < users.length; i++) { %>
              <tr>
                <td>
                  <%= users[i].username %>
                </td>
                <td>
                  <%= users[i].first_name %>
                </td>
                <td>
                  <%= users[i].last_name %>
                </td>
                <td>
                  <%= users[i].email || 'Optional' %>
                </td>
                <td>
                  <%= users[i].phoneNumber || 'Optional' %>
                </td>
                <td>
                  <%= users[i].role %>
                </td>
                <td>
                  <%= users[i].password %>
                </td>
                <td>
                  <%= users[i].registration_date %>
                </td>
                <td>
                  <!-- Update Button -->
                  <a href="/api/users/edit-form/<%= users[i].username %>" title="Update User"
                    class="btn btn-sm btn-update mx-1">
                    <i class="bi bi-pencil"></i> Edit
                  </a>

                  <!-- Delete Button -->
                  <a href="/api/users/delete/<%= users[i].username %>" title="Delete User"
                    class="btn btn-sm btn-delete mx-1">
                    <i class="bi bi-trash"></i> Delete
                  </a>
                </td>
              </tr>
              <% } %>
          </tbody>
        </table>
      </div>
    </div>
</body>

</html>